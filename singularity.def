Bootstrap: docker
From: nvidia/cuda:11.0.3-cudnn8-devel-ubuntu20.04

%labels
    MAINTAINER "Yoichiro Hisadome <hisadome0406@gmail.com>"

%environment
    export PYTHONIOENCODING=utf-8
    export TZ=Asia/Tokyo

%files
    ./requirements.txt

%post
    ln -snf /usr/share/zoneinfo/$TZ /etc/localtime && echo $TZ > /etc/timezone
    apt-get update -y
    apt-get install ffmpeg libsm6 libxext6 fish git tmux vim htop -y

    DEBIAN_FRONTEND=noninteractive apt-get install -y --no-install-recommends \
    python3-dev \
    python3-tk \
    python3-pip \
    python3-setuptools \
    systemd \
    imagemagick \
    curl \
    openslide-tools
    
    # Reduce image size
    rm -rf /var/lib/apt/lists/*

    python3 -m pip install --upgrade pip

    python3 -m pip install wheel
    python3 -m pip install -r requirements.txt --extra-index-url https://download.pytorch.org/whl/cu113
